<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.studycase.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:text="Makan Malam " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="dengan Milea" />

        <EditText
            android:id="@+id/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:ems="10"
            android:hint="Makanan"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Text1"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Jumlah"
            android:inputType="number" />

        <Button
            android:id="@+id/Eatbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text2"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            android:layout_toStartOf="@+id/textView3"
            android:background="@android:color/holo_orange_dark"
            android:text="Eatbus" />

        <Button
            android:id="@+id/Abnormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Eatbus"
            android:layout_alignBottom="@+id/Eatbus"
            android:layout_toEndOf="@+id/textView5"
            android:background="@android:color/holo_orange_dark"
            android:text="Abnormal" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
